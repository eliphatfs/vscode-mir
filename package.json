{
    "name": "vscode-mir",
    "displayName": "VSCode MIR",
    "publisher": "eliphatfs0",
    "license": "MIT",
    "description": "Support for MIR textual format.",
    "version": "0.0.1",
    "repository": {
        "url": "https://github.com/eliphatfs/vscode-mir"
    },
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Programming Languages",
        "Debuggers"
    ],
    "contributes": {
        "languages": [
            {
                "id": "mirt",
                "aliases": [
                    "MIR Text",
                    "mirt"
                ],
                "extensions": [
                    ".mir",
                    ".mirt"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mirt",
                "scopeName": "source.mirt",
                "path": "./syntaxes/mirt.tmLanguage.json"
            }
        ],
        "debuggers": [
            {
                "type": "mir-intp-dap",
                "label": "Debug: MIR Interpreter",
                "languages": [
                    "mirt"
                ],
                "configurationAttributes": {
                    "launch": {
                        "required": [
                        ],
                        "properties": {
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "mir-intp-dap",
                        "request": "launch",
                        "name": "MIR Interpreter"
                    }
                ]
            }
        ]
    },
    "devDependencies": {
        "@types/node": "^16.10.2",
        "typescript": "^4.4.3",
        "vscode": "^1.1.37"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onDebug"
    ],
    "scripts": {
        "build": "tsc -p ./src",
        "vscode:prepublish": "tsc -p ./src"
    },
    "dependencies": {}
}
